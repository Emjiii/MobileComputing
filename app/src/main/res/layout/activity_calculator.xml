<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobile_computing.Calculator"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/set_btn"
        android:textAlignment="viewEnd"
        android:paddingRight="20dp"
    />

    <LinearLayout
        android:id="@id/set_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_btn"
                android:text="C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/open_bracket_btn"
                android:text="("
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_bracket_btn"
                android:text=")"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide_btn"
                android:text="/"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven_btn"
                android:text="7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight_btn"
                android:text="8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine_btn"
                android:text="9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply_btn"
                android:text="*"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/four_btn"
                android:text="4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/five_btn"
                android:text="5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/six_btn"
                android:text="6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addition_btn"
                android:text="+"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/one_btn"
                android:text="1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/two_btn"
                android:text="2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/three_btn"
                android:text="3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus_btn"
                android:text="-"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/all_clear_btn"
                android:text="AC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="24dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero_btn"
                android:text="0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/point_btn"
                android:text="."
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/equals_btn"
                android:text="="
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="@color/white"
                android:textSize="@dimen/calcu_btn_textSize"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:background="@drawable/calculator_btn"
                android:layout_margin="@dimen/calcu_btn_margin"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>